<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05.03.2016 Субота"
        android:id="@+id/date"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        app:cardBackgroundColor="#304FFE"
        android:id="@+id/cv">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:50-11:10"
                android:textColor="@android:color/white"
                android:id="@+id/time"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2-га пара"
                android:textColor="@android:color/white"
                android:id="@+id/classN"
                android:layout_below="@+id/time"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Комп&apos;ютерні мережі"
                android:textColor="@android:color/white"
                android:id="@+id/title"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/time"
                android:layout_toEndOf="@+id/time"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="лекція"
                android:textColor="@android:color/white"
                android:id="@+id/type"
                android:layout_below="@+id/title"
                android:layout_alignLeft="@+id/title"
                android:layout_alignStart="@+id/title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Г1305"
                android:textColor="@android:color/white"
                android:id="@+id/auditorium"
                android:layout_below="@+id/type"
                android:layout_alignLeft="@+id/type"
                android:layout_alignStart="@+id/type" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Гайдабрус Богдан Володимирович"
                android:textColor="@android:color/white"
                android:id="@+id/lecturer"
                android:layout_below="@+id/auditorium"
                android:layout_alignLeft="@+id/auditorium"
                android:layout_alignStart="@+id/auditorium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ІТ-41"
                android:textColor="@android:color/white"
                android:id="@+id/group"
                android:layout_below="@+id/lecturer"
                android:layout_alignLeft="@+id/lecturer"
                android:layout_alignStart="@+id/lecturer" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>